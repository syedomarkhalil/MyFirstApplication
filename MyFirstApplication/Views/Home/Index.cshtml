@model MyFirstApplication.Models.TvShowViewModel

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p><a>Display List Of Shows</a>.</p>


    @{
        var routeName = ViewContext.ActionDescriptor.AttributeRouteInfo.Name;
        var paginationVewModel = new PaginationViewModel
            {
                TotalPages = Model.TotalPages,
                RouteName = routeName
            };
    }
    @Html.Partial("_Pagination", paginationVewModel)
    <p></p>
</div>
<section>

    <table>
        @{
            int itemsPerRow = 4;
            int totalItems = Model.TvShows.Count;        

            for (int i = 0; i < totalItems; i++)
            {
                if (i % itemsPerRow == 0) // Start a new row
                {
                    <tr></tr>
                }

                <td>
                    <a href="@Model.TvShows[i].URL">
                        <img src="@Model.TvShows[i].ImageUrl" alt="@Model.TvShows[i].Name">
                    </a>
                    <div>
                        <a href="@Model.TvShows[i].URL">
                            <h4 style="color:black;"><b>@Model.TvShows[i].Name</b></h4>
                        </a>
                        <p>Rating @Model.TvShows[i].Rating?.Average</p>
                    </div>
                </td>
                if (i % itemsPerRow == itemsPerRow - 1 || i == totalItems - 1) // Close the row
                {
                    <tr></tr>
                }
            }
        }
    </table>
</section>
<div class=" text-center">
    @Html.Partial("_Pagination", paginationVewModel)
</div>
